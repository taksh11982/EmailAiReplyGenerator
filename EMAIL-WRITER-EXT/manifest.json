{
    "manifest_version": 3,
    "name": "Email Writer Extension",
    "version": "1.0",
    "description": "AI powered email reply generator.",
    "permissions": [
        "activeTab",
        "storage",
        "http://localhost:8080/*"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "https://mail.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*"],
            "js": ["content.js"],
            "css": ["content.css"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["popup.html", "content.css", "content.js","icons/*"],
            "matches": ["https://mail.google.com/*"]
        }
    ],
    "action" : {
        "default_title": "Email Writer",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self'; connect-src http://localhost:8080; object-src 'self'"
}